<UserControl x:Class="irc_core.Views.DataModelConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:irc_core.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"
                 Text="{Binding SearchField, UpdateSourceTrigger=PropertyChanged}"
                 materialDesign:HintAssist.Hint="Enter to search">
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding SearchTextboxCommand}"/>
            </TextBox.InputBindings>
        </TextBox>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding}" 
                  DataContext="{Binding DataView}"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  ColumnWidth="200"
                  />

        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    Margin="20 10">
            <TextBlock>View type:</TextBlock>
            <ItemsControl ItemsSource="{Binding SupportedViews}"
                          Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Content="{Binding Label}"
                                     GroupName="View type"
                                     Margin="5"
                                     IsChecked="{Binding Boolean}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Separator/>
            <TextBlock Margin="0 5">Filters:</TextBlock>
            <ItemsControl ItemsSource="{Binding Filters}"
                          Margin="10">
            </ItemsControl>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button VerticalAlignment="Center"
                Margin="10"
                Command="{Binding AddDataViewCommand}">
                <materialDesign:PackIcon Kind="Add"/>
            </Button>
            <Button VerticalAlignment="Center"
                Margin="10"
                Command="{Binding SaveDataCommand}">
                <materialDesign:PackIcon Kind="Floppy"/>
            </Button>
        </StackPanel>
        
    </Grid>
</UserControl>
